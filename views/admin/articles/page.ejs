<%- include ('../../partials/header.ejs') %> 
<body>
    <%- include ('../../partials/homenavbar.ejs') %> 
    <div class="container">
        <hr>
        <% result.articles.rows.forEach(article => { %>
            <div class="card">
                <div class="card-header">
                    <h2><%= article.title %> </h2>
                </div>
                <div class="card-body">
                    <a class="btn btn-success" href="/<%= article.slug %> ">Read Article</a>
                </div>
            </div>
            <br>
        <% }) %>

        <div class="row">
            <div class="col col-12">
                <% if(result.page > 2) {%> 
                    <a href="/articles/page/<%= result.page - 1 %>" style="float: left;">Previus</a>
                <% } else if(result.page ==2) {%>
                    <a href="/" style="float: left;">Previus</a>
                <% } %>  
                <% if(result.next) {%>
                <a href="/articles/page/<%= result.page + 1 %>" style="float: right;">Next</a>
                <% } %> 
            </div>
            <br>
        </div>
        <br>

    </div>
</body>
<%- include ('../../partials/footer.ejs') %>
